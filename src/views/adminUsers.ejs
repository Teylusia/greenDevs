<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head') %>

    <body>

        <%- include('./partials/header') %>

            <main>



                <div class="general-container">
                    <div class="panel">

                        <div class="admin-form">
                            <h2>Panel de Administrador</h2>
                            <a href="/user/register">
                                <button>Nuevo Usuario +</button>
                            </a>
                            <a href="/user/admin/users">
                                <button>Listar Usuarios</button>
                            </a>
                            <button>Nueva Categoria</button>
                            <form action="/user/admin/search" method="GET">
                                
                                <input type="text" name="search" placeholder="Buscar producto">
                                <input type="button" value="Buscar">
                            </form>
                            
                            
                        </div>
                        </div>
                    </div>
                    
                </aside>
                <div>
                    <table>
                        <tr>
                            <th>Id</th>
                            <th>Nombre</th>
                            <th>email</th>
                            <th>avatar</th>
                            <th>status</th>
                            <th>Nivel</th>
                            <th>Editar/eliminar</th>

                        </tr>

                        <% usuarios.forEach(usuario=> {%>
                            <td>
                                <p>

                                    <%= usuario.id %>
                                </p>
                            </td>
                            <td>
                                <%= usuario.name %>
                            </td>
                            <td>
                                <%= usuario.email %>
                               
                            </td>
                            <td>
                                <div class="avatar-listado">

                                    <img src="<%= usuario.avatar %>" alt="avatar-usuario">
                                </div>
                            </td>
                            <td>
                                <% if(usuario.status == 0){ %>
                                    <%= 'Inactivo' %>
                                <% }else{ %>
                                    <%= 'Activo' %>
                                <% } %>
                            </td>
                            <td>
                                <%= usuario.privilege%>
                            </td>
                            <td>
                                <a href="/users/edit/<%=usuario.id %>">
                                <button class="button-edit">Editar</button></a>
                                <a href="/user/delete/<%=usuario.id %>">Delete</a>

                                
                            </td>
                            </tr>
                            <%}) %>
                    </table>
                </div>

            </main>

            <%- include('./partials/footer') %>

    </body>

</html>