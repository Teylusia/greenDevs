<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head') %>

  <body>
    <%- include('./partials/header') %>

    <main>
      <section class="main-info">
        <h1></h1>
        <article class="DP-imagen">
          <img src="<%= product.image %>" alt="imagen del producto" />
        </article>
        <article class="mas-imagenes">
          <% if (image.length >= 4 ) { %> <% for( let i = 0; i < 4; i++ ) { %>
          <a href="<%=image[i].address %>">
            <img src="<%= image[i].address %>" alt=" Imagen-del-producto" />
          </a>

          <% } %> <% } else { %> <% image.forEach(element => { %>
          <a href="<%=image.address%>">
            <img src="<%= element.address %>" alt=" Imagen-del-producto" />
            <% }) %> <% } %>
          </a>
        </article>

        <article class="precio-compra-agregar">
          <h2><%= product.name %></h2>
          <h3 class="rating">
            <% if (product.rating == 1) { %>
              <i class="fa-solid fa-star"></i>
              <i class="fa-regular fa-star"></i>
              <i class="fa-regular fa-star"></i>
              <i class="fa-regular fa-star"></i>
              <i class="fa-regular fa-star"></i>
             
            <% } %>
            <% if (product.rating == 2) { %>
              <i class="fa-solid fa-star"></i>
              <i class="fa-solid fa-star"></i>
              <i class="fa-regular fa-star"></i>
              <i class="fa-regular fa-star"></i>
              <i class="fa-regular fa-star"></i>
             
            <% } %>
            <% if (product.rating == 3) { %>
              <i class="fa-solid fa-star"></i>
              <i class="fa-solid fa-star"></i>
              <i class="fa-solid fa-star"></i>
              <i class="fa-regular fa-star"></i>
              <i class="fa-regular fa-star"></i>
             
            <% } %>
            <% if (product.rating == 4) { %>
              <i class="fa-solid fa-star"></i>
              <i class="fa-solid fa-star"></i>
              <i class="fa-solid fa-star"></i>
              <i class="fa-solid fa-star"></i>
              <i class="fa-regular fa-star"></i>
             
            <% } %>
            <% if (product.rating == 5) { %>
              <i class="fa-solid fa-star"></i>
              <i class="fa-solid fa-star"></i>
              <i class="fa-solid fa-star"></i>
              <i class="fa-solid fa-star"></i>
              <i class="fa-solid fa-star"></i>
             
            <% } %>
          </h3>
          
          <h2>Precio: $ 
            <% if (product.discount == null) { %>
              <%= product.price%></h2>
              
              <% } else { %>
                
                <%=    (product.price - ((product.price * product.discount) /
                100)) %>
              <p class="precio-rebaja">$<%= product.price %></p>
              <h4>Descuento : <%= product.discount %> %</h4>
              <% }  %> 
            
          <div>

            <button  class="btn succ" type="submit">
              <h3><i class="fas fa-cart-plus"></i> Agregar al carrito</h3>
            </div>
          </button>
        </article>
      </section>

      <section class="info">
        <article class="detail-info">
          <div class="detail">

            <h3>Descripci√≥n:</h3>
            <p><%= product.description %></p>
          </div>
          <div class="detail">
  
            <h3>Requisitos:</h3>
            <p><%= product.specs%></p>
          </div>

          <div class="detail">
  
            <h3>Categoria:</h3>
           categoria
          </div>
        </article>
    
        
          <div>
            <%- include("./partials/related")  %> 

          </div>
      </section>
    </main>

    <%- include('./partials/footer') %>
  </body>
  <script src="/js/productDetail.js"></script>
</html>