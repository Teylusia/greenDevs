<div class="products-category contenedor">
  <div class="contenedor-titulo-controles">
    <h3>Ofertas Populares</h3>
    <div class="indicadores1"></div>
  </div>

  <div class="contenedor-principal">
    <button role="button" id="flecha-izquierda-1" class="flecha-izquierda-1"><i class="fas fa-angle-left"></i></button>

    <div class="contenedor-carousel">
      <div class="carousel1">
        <% products.slice(-20).forEach( products => { %>
  
          <div class="popularOffersList">
            
              <a href="/product/detail/<%= products.id %> " class="productDetailLink">
              <img src="<%= products.image%>" alt="imagen-del-producto" />
              <p class="titulo-producto"><%= products.name %></p>
              
              
              <div class="caja-precio">
                <p class="precio-producto">$<%= (products.price - products.discount) %></p>
                <sup class="moneda">US$</sup>
              </div>
              <div class="box-card">
                <div class="caja-rebaja">
                  <p class="precio-rebaja">$<%= products.price %></p>
                  <sup class="moneda">US$</sup>
                  <span class="porcentaje-descuento">-20%</span>
                </div>
                <div class="card-shop"><i class="fa-solid fa-cart-shopping" title="AÃ±adir al carrito"></i></div>
              </div>
            </a>
          </div>
            <%})%>
      </div>
    </div>

    <button role="button" id="flecha-derecha-1" class="flecha-derecha-1"><i class="fas fa-angle-right"></i></button>
  </div>
  </div>
<script src = "/js/smallSlider1.js"> </script>
