<section class="ofertas-populares">
  
  <% products.slice(-5).forEach( products => { %>
    
    <article>
      
        <a href="/productDetail/<%= products.id %>" class="productDetailLink">
        <img src="<%= products.image%>" alt="imagen-del-producto" />
        <p class="titulo-producto"><%= products.name %></p>
        
        
        <div class="caja-precio">
          <p class="precio-producto">$<%= (products.price - products.discount) %></p>
          <sup class="moneda">US$</sup>
        </div>
        <div class="box-card">
          <div class="caja-rebaja">
            <p class="precio-rebaja">$<%= products.price %></p>
            <sup class="moneda">US$</sup>
            <span class="porcentaje-descuento">-20%</span>
          </div>
          <div class="card-shop"><i class="fa-solid fa-cart-shopping"></i></div>
        </div>
      </a>
    </article>
      <%})%>

  </section>